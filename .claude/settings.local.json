{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__github__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/gh_outbound_guard.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/gh_outbound_guard.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "(Write|Edit|MultiEdit)",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/contract_lint.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
